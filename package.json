{
  "name": "auto-email-sender",
  "version": "0.9.0",
  "description": "This application can send email from gmail automatically.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w",
    "make-cert": "electron-builder create-self-signed-cert -p autosender",
    "v-release": "electron-builder build -w -p 'onTagOrDraft'"
  },
  "build": {
    "appId": "com.autosender.app",
    "productName": "Email Auto Sender",
    "directories": {
      "buildResources": "build"
    },
    "target": "NSIS",
    "icon": "build/icon.ico",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "win": {
      "publish": [
        "github"
      ],
      "certificateFile": "private/autosender.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "autosender",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/woshik/electron-auto-sender"
  },
  "author": "Woshikuzzaman Anik",
  "license": "MIT",
  "devDependencies": {
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.5",
    "electron-log": "^3.0.8",
    "electron-updater": "^4.1.2",
    "getmac": "^1.4.6",
    "mongodb": "^3.3.2",
    "nodemailer": "^6.3.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1",
    "xlsx": "^0.15.1"
  }
}
